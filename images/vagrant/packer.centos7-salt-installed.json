{
  "builders": [
    {
      "type"                : "vagrant",
      "provider"            : "virtualbox",
      "source_path"         : "{{template_dir}}/../../.boxes/centos7-utils/package.box",
      "add_force"           : true,
      "box_name"            : "seagate.ees-prvsnr.centos7-utils",
      "template"            : "{{template_dir}}/vagrantfile.packer.template",
      "output_dir"          : "{{template_dir}}/../../.boxes/salt-installed",
      "output_vagrantfile"  : "{{template_dir}}/vagrantfile.boxed",
      "package_include"     : [
          "{{template_dir}}/../../test/id_rsa.test"
      ],
      "communicator"        : "ssh"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "mkdir -p /opt/seagate/eos-prvsnr"
      ]
    },
    {
     "type": "file",
     "source": "{{template_dir}}/../../cli/src/functions.sh",
     "destination": "/tmp/functions.sh"
    },
    {
     "type": "file",
     "source": "{{template_dir}}/../../files",
     "destination": "/opt/seagate/eos-prvsnr"
    },
    {
      "type": "shell",
      "inline": [
        "bash -xec \". /tmp/functions.sh; install_salt '' '' '' true\"",
        "rm -f /tmp/functions.sh",
        "rm -rf /var/cache/yum"
      ]
    }
  ]
}
