{
  "builders": [
    {
      "type"                  : "virtualbox-vm",
      "vm_name"               : "seagate.ees-prvsnr.centos7-base",
      "headless"              :  true,
      "guest_additions_mode"  : "disable",
      "shutdown_command"      : "shutdown now",
      "force_delete_snapshot" : "true",
      "keep_registered"       : "false",
      "skip_export"           : "false",
      "communicator"          : "ssh",
      "ssh_username"          : "root",
      "ssh_private_key_file"  : "{{template_dir}}/../../test/id_rsa.test",
      "vboxmanage": [
        [ "storagectl",
          "{{.Name}}",
          "--name", "eosnode_vdisk",
          "--add", "sas",
          "--controller", "LSILogicSAS",
          "--portcount", 2,
          "--hostiocache", "off",
          "--bootable", "off"
        ]
      ]
    }
  ],
  "post-processors": [{
      "type"                : "vagrant",
      "output"              : "{{template_dir}}/../../.boxes/centos7-base/package.box",
      "vagrantfile_template": "{{template_dir}}/vagrantfile.boxed",
      "include"             : [
          "{{template_dir}}/../../test/id_rsa.test"
      ]
   }]
}
